#! /usr/bin/bash

source ./createFunc
source ./useFunc

shopt -s extglob

declare -i exit=0
until [[ $exit -eq 1 ]]
do 
    read -p "> " -a input
    case ${input[0]} in
    +([Ee][Xx][Ii][Tt]))
        exit
        ;;
    +([cC][rR][eE][aA][tT][eE]))
        createFunc ${input[@]:1}
        ;;
    +([uU][sS][eE]))
        useFuncSQL ${input[@]:1}
        ;;
    esac
done
echo $databaseInUse